@using HireSphere.ViewModels;
@model AccountViewModel

@{
    ViewData["Title"] = "Edit Profile";
    Layout = null;
    var customerId = ViewBag.ID;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
    <link href="~/css/UpdateAccountStyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/style.css/edit.css">
    <link rel="stylesheet" href="~/css/all.min.css">
    <link rel="stylesheet" href="~/bootstrap-5.3.5-dist/bootstrap-5.3.5-dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container w-50 mt-5">
        <i class="fa-regular fa-circle-user user-icon mb-3"></i>
        <form asp-action="Update" asp-route-id="@ViewContext.RouteData.Values["id"]" method="post">
            <div class="input-group mb-3">
                <i class="fa-regular fa-circle-user icon"></i>
                <input asp-for="FullName" class="form-control" placeholder="Name" required />
            </div>
            <div class="input-group mb-3">
                <i class="fa-solid fa-phone icon"></i>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone" required minlength="6" />
            </div>
            <div class="input-group mb-3">
                <i class="fa-solid fa-envelope icon"></i>
                <input asp-for="Email" class="form-control" placeholder="Email" required />
            </div>
            <button type="submit" class="btn buttonedit">Edit</button>
        </form>
    </div>

    <script src="~/bootstrap-5.3.5-dist/bootstrap-5.3.5-dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
