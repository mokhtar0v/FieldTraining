@using BusinessLogic.DTOs
@model CustomerDTO
@{
    ViewData["Title"] = "Customer Profile";
}

<!-- Google Fonts (optional, for visual consistency with your reference) -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

<style>
    :root {
        --pop-font: "Poppins", sans-serif;
        --mon-font: "Montserrat", sans-serif;
    }

    body {
        font-family: var(--pop-font);
    }

    h1, h2, h3, h4, h5, h6 {
        font-family: var(--mon-font);
    }

    .details-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-bottom: 40px;
    }

    .form-group label {
        font-weight: 600;
    }

    .tab-pane input {
        background-color: #f9f9f9;
    }

    .nav-tabs .nav-link.active {
        font-weight: bold;
    }
</style>

<div class="container mt-5">
    <div class="details-card">
        <h1 class="mb-4">📁 Department Details</h1>

        <!-- Tabs Navigation -->
        <ul class="nav nav-tabs" id="departmentTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">
                    General
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="administration-tab" data-bs-toggle="tab" data-bs-target="#administration" type="button" role="tab" aria-controls="administration" aria-selected="false">
                    Administration
                </button>
            </li>
        </ul>

        <!-- Tab Contents -->
        <div class="tab-content mt-4" id="departmentTabContent">
            <!-- General Tab -->
            <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                <div class="row">
                    <div class="form-group col-md-6 mb-3">
                        <label asp-for="ID"></label>
                        <input asp-for="ID" class="form-control" readonly />
                    </div>
                    <div class="form-group col-md-6 mb-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" readonly />
                    </div>
                    <div class="form-group col-12 mb-3">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>
                    <div class="form-group col-12 mb-3">
                        <label asp-for="PhoneNum"></label>
                        <input asp-for="PhoneNum" class="form-control" readonly />
                    </div>
                    <div class="form-group col-12 mb-3">
                        <label asp-for="DateOfBirth"></label>
                        <input asp-for="DateOfBirth" class="form-control" readonly />
                    </div>
                </div>
            </div>
        <!-- Actions -->
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-success">✏️ Edit</a>
        </div>
    </div>
</div>
